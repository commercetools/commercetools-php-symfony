{% extends "CtpBundle::layout.html.twig" %}

{% block container %}

    {% include 'CtpBundle:partials:address.html.twig' with {address: cart.getShippingAddress} %}

    {% if cart.getBillingAddress %}
        {% include 'CtpBundle:partials:address.html.twig' with {address: cart.getBillingAddress} %}
    {% else %}
        {% include 'CtpBundle:partials:address.html.twig' with {address: cart.getShippingAddress} %}
    {% endif %}

    {% include 'CtpBundle:partials:shippingProvider.html.twig' with {shippingInfo: cart.getShippingInfo} %}

    {% include 'CtpBundle:partials:cartView.html.twig' with {cart: cart} %}

{% endblock %}