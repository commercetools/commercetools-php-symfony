<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="commercetools.cache.review" type="string">false</parameter>
    </parameters>
    <services>
        <service id="Commercetools\Symfony\ReviewBundle\Model\Repository\ReviewRepository">
            <argument>%commercetools.cache.customer%</argument>
            <argument type="service" id="commercetools.cache" />
            <argument type="service" id="Commercetools\Core\Client"/>
            <argument type="service" id="commmercetools.mapper.factory" />
        </service>
        <service id="Commercetools\Symfony\ReviewBundle\Manager\ReviewManager" public="true">
            <argument id="Commercetools\Symfony\ReviewBundle\Model\Repository\ReviewRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>
