<!DOCTYPE html>
<html lang="en">

<head>
    {% include '@Example/partials/common/htmlhead.html.twig' %}
</head>

<body>
<div class="darkbg hidden"></div>
{% include '@Example/partials/common/header.html.twig' %}
<div class="my-orders">
    <div class="container">
      {% include '@Example/partials/common/messages.html.twig' %}
        <div class="my-account-title">
            <span class="my-account-title-text icon-user">{{ 'myWishlist.title'|trans([], 'my-account') }}</span>
            &nbsp;&nbsp;&nbsp;
            <span class="items-total-txt">{{ 'myWishlist.itemsTotal'|trans([], 'my-account') }}</span>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="my-orders-wrapper">
                    <div class="row">
                        <div id="my-account-desktop-content" class="col-sm-12">
                            <div class="my-orders-order-content">
                                <div class="my-account-wishlist-items-wrapper">
                                    <div class="row">
                                        {% for list_i in content.products.list %}
                                            <div class="col-sm-6 col-md-3">
                                                {% include '@Example/partials/catalog/product-thumbnail.html.twig' with {'thumbnail':list_i, 'index':list_i.index, 'wishlist':true} %}
                                                <form id="form-remove-from-wishlist{{ list_i.index }}" name="remove-from-wishlist"
                                                      action="{{ list_i.root.meta._links.removeFromWishlist.href }}" method="post">
                                                    <input type="hidden" name="csrfToken"
                                                           value="{{ list_i.root.meta.csrfToken }}"/>
                                                    <input type="hidden" name="lineItemId" value="{{ list_i.product.lineItemId }}">

                                                    <div class="my-account-wishlist-remove-btn">
                                                        <button type="submit">{{ list_i.i18n }}</button>
                                                    </div>
                                                </form>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="my-account-wishlist-pagination-bottom">
                                </div>
                                <div class="my-account-wishlist-clear-btn">
                                    <form id="form-clear-wishlist" name="clear-wishlist"
                                          action="{{ root.meta._links.clearWishlist.href }}" method="post">
                                        <input type="hidden" name="csrfToken"
                                               value="{{ root.meta.csrfToken }}"/>

                                        <button type="submit">{{ 'myWishlist.clear'|trans([], 'my-account') }}</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include '@Example/partials/common/footer.html.twig' %}
{% include '@Example/partials/common/htmlscripts.html.twig' %}
</body>

</html>
