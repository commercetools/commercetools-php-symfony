{% extends "ExampleBundle::layout.html.twig" %}

{% block container %}
    <h1>Orders</h1>
    <div class="col-md-12">
        <table class="table">
            <thread>
                <tr>
                    <th>Order Number</th>
                    <th>Date</th>
                    <th>Total Price</th>
                    {#<th>Version</th>#}
                    <th>View order</th>
                    <th>Cancel order</th>
                </tr>
            </thread>
            <tbody>
            {% for order in orders %}
                {% if order is not empty %}
                    <tr>
                        <td>{{ order.getOrderNumber }} </td>
                        <td>{{ order.getCreatedAt.getDateTime|date("m/d/Y H:i") }}</td>
                        <td>{{ order.getTotalPrice }} </td>
                        <td><a href="{{ path('_ctp_example_order', {'orderId': order.getId}) }}">Check </a> </td>
                        <td><a href="{{ path('_ctp_example_order_cancel', {'orderId': order.getId}) }}">Cancel </a> </td>
                    </tr>
                {% else %}
                    <p>There are no orders yet, go a head and buy something!</p>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
