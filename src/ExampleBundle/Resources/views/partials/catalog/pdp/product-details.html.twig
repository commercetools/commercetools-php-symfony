<div class="panel panel-default">
  <div class="panel-heading" role="tab" id="headingProductDetails">
    <h4 class="panel-title product-accordion-title text-uppercase">
      <a id="pdp-product-details-toggle" class="collapsed pdp-accord-toggle" data-toggle="collapse" data-parent="#accordion-product-info" href="#collapseProductDetails" aria-expanded="false" aria-controls="collapseProductDetails">{{ 'details.title'|trans([], 'catalog') }}
        <img class="accordion-plus" src="{{ asset('bundles/example/img/plus79.png') }}" alt="accordion content">
      </a>
    </h4>
  </div>
  <div id="collapseProductDetails" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingProductDetails">
    <div class="panel-body panel-body-pdp">
      <ul class="product-features-list">
        {% for features_i in product.details.features %}
        <li><span>{{ features_i.name }}:</span> {{ features_i.value }}</li>
        {% endfor %}
      </ul>
      <ul class="product-details-list">
        {% for list_i in product.details.list %}
        <li>{{ list_i.text }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
