<div class="aspect-ratio aspect-ratio--8to3">
  <picture>
    <source srcset="{{ asset('bundles/example/img/cms/man_large-8to3.jpg') }}" media="(min-width: 1200px)">
    <source srcset="{{ asset('bundles/example/img/cms/man_medium-8to3.jpg') }}" media="(min-width: 768px)">
    <img src="{{ asset('bundles/example/img/cms/man_small-8to3.jpg') }}" class="img-responsive">
  </picture>
</div>

