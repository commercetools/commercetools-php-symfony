  <h4 class="banner-title">
    <img class="hidden-xs" src="{{ asset('bundles/example/img/cms/sun-logo.png') }}"/><br/><br/>{{ 'bannerMiddle.title' | trans([], 'cms') | raw }}
  </h4>
  <p class="banner-subtitle">{{ 'bannerMiddle.subtitle' | trans([], 'cms') | raw }}</p>
  <p class="hidden-xs hidden-sm">{{ 'bannerMiddle.description' | trans([], 'cms') | raw }}</p>
  <a class="btn banner-btn" href="{{ 'bannerMiddle.linkHref' | trans([], 'cms') }}">
    {{ 'bannerMiddle.linkText' | trans([], 'cms') }}
