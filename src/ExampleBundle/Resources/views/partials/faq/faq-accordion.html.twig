<div class="panel panel-default faq-accordion-panel">
  <div class="panel-heading" role="tab" id="accordion-{{ loop.index0 }}-{{ key }}">
    <h4 class="panel-title faq-accordion-title">
      <a id="pdp-product-details-toggle" class="collapsed pdp-accord-toggle" data-toggle="collapse" data-parent="#accordion-product-info" href="#accordion-collapse-{{ loop.index0 }}-{{ key }}" aria-expanded="false" aria-controls="accordion-collapse-{{ loop.index0 }}-{{ key }}">{{ title }}
        <img class="accordion-plus hidden-xs" src="{{ asset('bundles/example/img/plus79.png') }}" alt="accordion content">
      </a>
    </h4>
  </div>
  <div id="accordion-collapse-{{ loop.index0 }}-{{ key }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="accordion-{{ loop.index0 }}-{{ key }}">
    <div class="panel-body panel-body-pdp">
      {{ text }}
    </div>
  </div>
</div>
