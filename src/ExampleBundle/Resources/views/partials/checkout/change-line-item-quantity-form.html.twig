<form action="{{ root.meta._links.changeLineItem.href }}" method="post">
    <input type="hidden" name="csrfToken" value="{{ root.meta.csrfToken }}"/>
    <input type="hidden" name="lineItemId" value="{{ lineItemId }}">
    <div class="sm-pull-right visible-xs">
        <button type="submit" id="cart-quantity-submit-btn-{{ loop.index0 }}" class="quantity-submit-btn"><span class="glyphicon glyphicon-refresh"></span></button>
    </div>
    <div class="sm-pull-right quantity-spinner">
        <span id="cart-quantity-decrement-{{ loop.index0 }}" class="input-number-decrement">â€“</span>
        <input id="cart-quantity-value-{{ loop.index0 }}" name="quantity" class="input-number" type="text" value="{{ quantity }}" min="1" max="10">
        <span id="cart-quantity-increment-{{ loop.index0 }}" class="input-number-increment">+</span>
    </div>
    <div class="sm-pull-right hidden-xs">
        <button type="submit" id="cart-quantity-submit-btn-{{ loop.index0 }}" class="quantity-submit-btn"><span class="glyphicon glyphicon-refresh"></span></button>
    </div>
</form>