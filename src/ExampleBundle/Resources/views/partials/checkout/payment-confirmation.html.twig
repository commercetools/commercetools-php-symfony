<div class="checkout-summary">
    <div class="text-uppercase">
        <span class="checkout-summary-title">{{ 'paymentInformation'|trans([], 'checkout') }}</span>
        {% include '@Example/partials/checkout/edit-link.html.twig' with {'id':"confirmation-edit-details-btn", 'url':meta._links.editPaymentInfo.href, 'enabled':editable} %}
    </div>
    <div class="checkout-summary-text">
        <span>{{ paymentDetails.type }}</span>
        <br>
        <span>{{ paymentDetails.name }}</span>
        <br>
        <span>{{ paymentDetails.card }}</span>
        <br>
        <span>{{ paymentDetails.number }}</span>
        <br>
        <span>{{ paymentDetails.date }}</span>
    </div>
</div>
