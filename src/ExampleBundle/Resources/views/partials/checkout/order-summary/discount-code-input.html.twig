{% if editable %}
    <div class="row">
        <div class="col-sm-offset-6 col-sm-6">
            {% include '@Example/partials/form/global-messages.html.twig' with {'messages':content.cart.addDiscountCodeForm.messages} %}
            {% include '@Example/partials/form/global-errors.html.twig' with {'errors':content.cart.addDiscountCodeForm.errors} %}
        </div>
        <div class="col-sm-12">
            <form id="form-add-discount-code" class="text-right promotion-info" action="{{ root.meta._links.addDiscountCode.href }}" method="post">
                <span class="text-uppercase promo-info-text" title="{{ 'discountTooltip'|trans([], 'checkout') }}">
                    {{ 'discountPromoInfo'|trans([], 'checkout') }}
                    <img class="info-icon" src="{{ root.meta.assetsPath }}img/information-3787f70287d781184eef270161383e9f.png" alt="information icon">
                </span>
                <input type="hidden" name="csrfToken" value="{{ root.meta.csrfToken }}"/>
                <input id="promo-code" type="text" name="code" value="{{ content.cart.addDiscountCodeForm.code }}">
                <button id="cart-apply-promocode-btn" class="text-uppercase promo-apply-btn">
                    {{ 'discountApply'|trans([], 'checkout') }}
                </button>
            </form>
        </div>
    </div>
{% endif %}

