{% for discountCode in content.cart.discountCodes %}
<div class="row">
  <div class="col-sm-12">
     <div class="col-sm-10 col-xs-7">
        <div class="text-right payment-code-applied">
            {% if discountCode.first %}
            <span class="text-uppercase payment-code-title" title="Promotion code applied">
                {{ 'promoCodeApplied'|trans({}, 'checkout') }}
            </span>
            {% endif %}
        </div>
     </div>
     <div class="col-sm-2 col-xs-5 text-right">
        <form action="{{ path('_ctp_example_discount_code_remove') }}" method="post">
            <span class="payment-code">{{ discountCode.name }}</span>
            <input type="hidden" name="csrfToken" value="{{ discountCode.csrf_token('csrfToken') }}"/>
            <input type="hidden" name="discountCodeId" value="{{ discountCode.id }}">
            {% if discountCode.editable %}
            <button id="cart-apply-promocode-btn">
                <span>
                    <img class="cart-action-icon" src="{{ asset('bundles/example/img/delete-1-421d04c332afe6d751d51e28934399fd.png') }}"
                        alt="{{ 'form.delete'|trans({}, 'main') }}">
                </span>
            </button>
            {% endif %}
        </form>
    </div>
  </div>
</div>
{% endfor %}
