<div class="row">
    <div class="col-sm-10 col-xs-7">
        <div class="text-right subtotal">
            <span class="subtotal-title">{{ 'subtotal'|trans([], 'checkout') }}</span>
        </div>
      {% if meta.features.cartDiscounts.active %}
          <div class="text-right">
              <span class="order-discount">{{ 'orderDiscount'|trans([], 'checkout') }}</span>
          </div>
      {% endif %}
        <div class="text-right delivery-info">
            <span class="delivery-info-title">{{ 'shipping'|trans([], 'checkout') }}</span>
        </div>
        <hr class="total-divider">
        <div class="text-right">
            <span>{{ 'common.salesTax'|trans([], 'main') }}</span>
        </div>
        <div class="text-right">
            <span class="order-total">{{ 'total'|trans([], 'checkout') }}</span>
        </div>
    </div>
    <div class="col-sm-2 col-xs-5 text-right">
        <div>
            <span>{{ cart.taxedPrice.totalNet }}</span>
        </div>
      {% if meta.features.cartDiscounts.active %}
          <div>
              <span class="order-discount">{{ cart.discount }}</span>
          </div>
      {% endif %}
        <div>
            <span>{{ cart.shippingInfo.price }}</span>
        </div>
        <hr>
        <div>
            <span>{{ cart.taxedPrice.taxPortions.current.amount }}</span>
        </div>
        <div>
            <span class="order-total">{{ cart.totalPrice }}</span>
        </div>
    </div>

  {% if checkoutConfirmation %}
      <div class="complete-order">
          <a href="{{ path('_ctp_example_checkout_place_order') }}"><button id="confirmation-completeorder-btn"
                  class="btn complete-order-btn">{{ 'completeMyOrder'|trans([], 'checkout') }}</button></a>
          <br>
      </div>
  {% endif %}
</div>
