{% if navMenu.new %}
<li class="dropdown menu-large">
  <a href="{{ root.meta._links.new.href }}" class="dropdown-toggle" data-toggle="dropdown">
    {{ 'header.new'|trans([], 'main') }}
    <img class="mobile-plus-content visible-xs" src="{{ asset('bundles/example/img/plus79.png') }}" alt="{{ 'more'|trans([], 'main') }}">
  </a>
  {% include '@Example/partials/common/nav-menu-category.html.twig' with {'category':new} %}
</li>
{% endif %}

{% for categories_i in navMenu.categories %}
  <li class="dropdown menu-large">
    <a href="{{ categories_i.url }}" class="dropdown-toggle {% if categories_i.sale %}sale icon-ribbon{% endif %}" data-toggle="dropdown">
      {{ categories_i.text }}
      <img class="mobile-plus-content visible-xs" src="{{ asset('bundles/example/img/plus79.png') }}" alt="{{ categories_i.i18n }}">
    </a>
    {% include '@Example/partials/common/nav-menu-category.html.twig' with {'category':categories_i} %}
  </li>
{% endfor %}

{% if navMenu.brands %}
<li class="dropdown menu-large">
  <a href="{{ root.meta._links.brands.href }}" class="dropdown-toggle" data-toggle="dropdown">
    {{ 'header.brands'|trans([], 'main') }}
    <img class="mobile-plus-content visible-xs" src="{{ asset('bundles/example/img/plus79.png') }}" alt="{{ 'more'|trans([], 'main') }}">
  </a>
  {% include '@Example/partials/common/nav-menu-category.html.twig' with {'category':brands} %}
</li>
{% endif %}

{% if navMenu.sale %}
  <li class="dropdown menu-large">
    <a href="{{ root.meta._links.sale.href }}" class="dropdown-toggle sale icon-ribbon" data-toggle="dropdown">
      {{ 'header.sale'|trans([], 'main') }}
      <img class="mobile-plus-content visible-xs" src="{{ asset('bundles/example/img/plus79.png') }}" alt="{{ 'more'|trans([], 'main') }}">
    </a>
    {% include '@Example/partials/common/nav-menu-category.html.twig' with {'category':sale} %}
  </li>
{% endif %}
