<form id="form-search" action="{{ root.meta._links.search.href }}" class="search-box text-right">
  <input name="q" type="search" placeholder="{{ 'header.search'|trans([], 'main') }}" id="search-input" class="search-field" required/>
  <button type="submit" id="search-button" class="search-button">
    <span class="icon-font icon-magnifying-glass"></span>
    <span class="sr-only">{{ 'header.search'|trans([], 'main') }}</span>
  </button>
</form>

<div class="search-container">
  <div id="search-results" class="row"> </div>
  <div class="loading">
    <div class="loader"></div>
  </div>
</div>
