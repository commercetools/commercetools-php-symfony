<!DOCTYPE html>
<html lang="en">

<head>
    {% include '@Example/partials/common/htmlhead.html.twig' %}
</head>

<body>
<div class="darkbg hidden"></div>
{% include '@Example/partials/common/header.html.twig' %}
<div class="my-account">
    <div class="container">
      {% include '@Example/partials/common/messages.html.twig' %}
        <div class="my-account-title">
            <span class="my-account-title-text icon-user">{{ 'myAccount.title'|trans([], 'my-account') }}</span>
        </div>
        <div class="row">
            <div class="my-account-content">
                <div class="row">
                    <div id="my-account-desktop-content" class="col-sm-12">
                        <div class="change-password">
                            <div class="change-password-wrapper">
                                <div class="personal-details-title">
                                    <span>{{ 'forgotPassword.title'|trans([], 'my-account') }}</span>
                                    <span class="pull-right required-text">{{ 'form.required'|trans([], 'main') }}*</span>
                                </div>
                                <div>
                                    <span>{{ 'forgotPassword.description'|trans([], 'my-account') }}</span>
                                </div>
                                <form id="form-forgot-password" action="{{ root.meta._links.recoveryEmail.href }}"
                                      method="post">
                                    <input type="hidden" name="csrfToken" value="{{ root.meta.csrfToken }}"/>
                                    <div class="row">
                                        {% include '@Example/partials/form/global-messages.html.twig' with {'messages':content.passwordRecoveryForm.messages} %}
                                        {% include '@Example/partials/form/global-errors.html.twig' with {'errors':content.passwordRecoveryForm.errors} %}
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-sections">
                                                <span class="form-labels">{{ 'form.email'|trans([], 'main') }}*</span><br>
                                                <input class="form-inputs" type="email" name="email" value="" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <hr class="light-grey-hr">
                                            <div class="add-new-address-btn push-right">
                                                <button id="password-reset-submit-btn">{{ 'form.submit'|trans([], 'main') }}</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include '@Example/partials/common/footer.html.twig' %}
{% include '@Example/partials/common/htmlscripts.html.twig' %}
</body>

</html>
