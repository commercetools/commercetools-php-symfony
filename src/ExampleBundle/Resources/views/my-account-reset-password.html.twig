<!DOCTYPE html>
<html lang="en">

<head>
  {% include '@Example/partials/common/htmlhead.html.twig' %}
</head>

<body>
  <div class="darkbg hidden"></div>
  {% include '@Example/partials/common/header.html.twig' %}
  <div class="my-account">
    <div class="container">
      {% include '@Example/partials/common/messages.html.twig' %}
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{ 'myAccount.title'|trans([], 'my-account') }}</span>
      </div>
      <div class="row">
        <div class="my-account-content">
          <div class="row">
            <div id="my-account-desktop-content" class="col-sm-12">
              <div class="change-password">
                <div class="change-password-wrapper">
                  <div class="personal-details-title">
                    <span>{{ 'resetPassword.title'|trans([], 'my-account') }}</span>
                    <span class="pull-right required-text">{{ 'form.required'|trans([], 'main') }}*</span>
                  </div>
                  <form id="form-change-password" action="{{ content.resetPasswordUrl }}" method="POST">
                    <input type="hidden" name="csrfToken" value="{{ root.meta.csrfToken }}"/>
                    <div class="row">
                      {% include '@Example/partials/form/global-messages.html.twig' with {'messages':content.resetPasswordForm.messages} %}
                      {% include '@Example/partials/form/global-errors.html.twig' with {'errors':content.resetPasswordForm.errors} %}
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-sections">
                          <span class="form-labels">{{ 'resetPassword.newPasswordLabelTxt'|trans([], 'my-account') }}*</span><br>
                          <input name="newPassword" class="form-inputs" type="password">
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-sections">
                          <span class="form-labels">{{ 'resetPassword.confirmPasswordLabelTxt'|trans([], 'my-account') }}*</span><br>
                          <input name="confirmPassword" class="form-inputs" type="password">
                        </div>
                      </div>
                    </div>
                    <hr class="light-grey-hr">
                    <div class="personal-details-edit-btn">
                      <span>
                        <button type="submit" class="update-btn password-change-btn">
                          {{ 'resetPassword.resetBtn'|trans([], 'my-account') }}
                        </button>
                      </span>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% include '@Example/partials/common/footer.html.twig' %}
  {% include '@Example/partials/common/htmlscripts.html.twig' %}
</body>

</html>
