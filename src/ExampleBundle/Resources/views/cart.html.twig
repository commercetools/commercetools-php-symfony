<!DOCTYPE html>
<html lang="en">

<head>
  {% include '@Example/partials/common/htmlhead.html.twig' %}
</head>

<body>
  <div class="darkbg hidden"></div>
  {% include '@Example/partials/common/header.html.twig' %}
  <div class="cart-page">
    <div class="container">
      {% include '@Example/partials/common/messages.html.twig' %}
      <div class="row">
        <div class="col-sm-8 col-xs-12">
          <div class="current-in-bag">
            <span>
              <img class="bag-icon-lg" src="{{ asset('bundles/example/img/hand-bag-2-black.png') }}" alt="bag icon">
            </span>
            <span class="text-uppercase your-bag-txt">{{ 'yourBag'|trans([], 'checkout') }}: </span>
            <span class="items-total-txt">{{ 'itemsTotal'|trans([], 'checkout') }}</span>
          </div>
        </div>
        <div class="col-sm-4">
          {% include '@Example/partials/checkout/start-checkout-link.html.twig' with {'id':"cart-checkoutnow-btn"} %}
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          {% include '@Example/partials/checkout/order-summary.html.twig' with {'cart':content.cart, 'mainClass':"cart-content", 'editable':true} %}
        </div>
      </div>
      <div class="row bottom-cart-btns">
        <div class="col-sm-6">
          {% include '@Example/partials/checkout/continue-shopping-button-left.html.twig' %}
        </div>
        <div class="col-sm-6">
          {% include '@Example/partials/checkout/start-checkout-link.html.twig' with {'bottom':true} %}
        </div>
      </div>
    </div>
  </div>
  {% include '@Example/partials/common/wishlist.html.twig' with {'wishlist':content.wishlist} %}
  {% include '@Example/partials/common/footer.html.twig' %}
  {% include '@Example/partials/common/htmlscripts.html.twig' %}
</body>

</html>
