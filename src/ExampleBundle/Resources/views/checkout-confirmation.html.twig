<!DOCTYPE html>
<html lang="en">

<head>
  {% include '@Example/partials/common/htmlhead.html.twig' %}
</head>

<body>
{% include '@Example/partials/common/checkout-header.html.twig' %}
<div class="checkout-shipping">
    <div class="container">
      {% include '@Example/partials/common/messages.html.twig' %}
        <div class="row">
            <div class="col-md-7">
              {% include '@Example/partials/checkout/secure-checkout-title.html.twig' with {'titleKey':"checkout:confirmationPage.title"} %}
            </div>
            <div class="col-md-5">
              {% include '@Example/partials/checkout/step-widget.html.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="checkout">
{#                    {{ form_start(form, {'action': path('_ctp_example_checkout_confirm')}) }}#}
{#                        {{ form_row(form._token) }}#}
{#                        {% include '@Example/partials/form/global-errors.html.twig' with {'errors':content.checkoutForm.errors} %}#}
                        <div class="row">
                            <div class="col-sm-4 checkout-first-col">
                              {% include '@Example/partials/checkout/address-confirmation.html.twig' with {'address':content.cart.shippingAddress, 'titleKey':"checkout:shippingAddress", 'editable':true, 'editUrl':meta._links.editShippingAddress.href} %}
                            </div>
                            <div class="col-sm-4 checkout-second-col">
                              {% include '@Example/partials/checkout/address-confirmation.html.twig' with {'address':content.cart.billingAddress, 'titleKey':"checkout:billingAddress", 'editable':true, 'editUrl':meta._links.editBillingAddress.href} %}
                            </div>
                            <div class="col-sm-4 checkout-third-col">
                              {% include '@Example/partials/checkout/shipping-method-confirmation.html.twig' with {'shippingMethod':content.cart.shippingMethod, 'editable':true} %}
                              {% include '@Example/partials/checkout/payment-confirmation.html.twig' with {'paymentDetails':content.cart.paymentDetails, 'editable':true} %}
                            </div>
                        </div>
                      {% include '@Example/partials/checkout/order-summary.html.twig' with {'cart':content.cart, 'mainClass':"confirmation-products-title", 'editable':false, 'checkoutConfirmation':true} %}
                    </form>
                </div>
            </div>
        </div>
    </div>
  {% include '@Example/partials/common/checkout-footer.html.twig' %} {% include '@Example/partials/common/htmlscripts.html.twig' %}
</body>

</html>
