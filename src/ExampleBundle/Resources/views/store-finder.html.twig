<!DOCTYPE html>
<html lang="en">

<head>
  {% include '@Example/partials/common/htmlhead.html.twig' %}
</head>

<body>
  <div class="darkbg hidden"></div>
  {% include '@Example/partials/common/header.html.twig' %}

  <div class="container">
    {% include '@Example/partials/common/messages.html.twig' %}
    <div class="store-finder-title">{{ 'storeFinder.title'|trans([], 'main') }}</div>
    <div class="store-finder-wrapper">
      <div class="stores-description">{{ 'storeFinder.description'|trans([], 'main') }}</div>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <div class="store-finder-box">
            <form id="" action="" method="post">
              <div>
                <label class="store-finder-label" for="postcode">{{ 'storeFinder.postcode'|trans([], 'main') }}</label><br>
                <input class="store-finder-input" type="text" name="postcode" value="">
              </div>
              <div class="store-finder-option-select">
                <label class="store-finder-label" for="region">{{ 'storeFinder.orRegion'|trans([], 'main') }}</label><br>
                <select id="" class="store-finder-select" name="region">
                  <option value="">{{ 'storeFinder.selectRegion'|trans([], 'main') }}</option>
                  {% for regionSelector_i in content.regionSelector %}
                    <option value="{{ regionSelector_i.value }}" {% if regionSelector_i.selected %}selected{% endif %}>{{ regionSelector_i.label }}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="store-finder-option-select">
                <label class="store-finder-label" for="city">{{ 'storeFinder.city'|trans([], 'main') }}</label><br>
                <select id="" class="store-finder-select" name="city">
                  <option value="">{{ 'storeFinder.selectCity'|trans([], 'main') }}</option>
                  {% for citySelector_i in content.citySelector %}
                    <option value="{{ citySelector_i.value }}" {% if citySelector_i.selected %}selected{% endif %}>{{ citySelector_i.label }}</option>
                  {% endfor %}
                </select>
              </div>
              <button id="" class="store-finder-submit-btn">{{ 'storeFinder.lookUp'|trans([], 'main') }}</button>
            </form>
          </div>
          {# Individual store information is currently hardcoded, needs to be adjusted according to the way the data will be fetched #}
          <div id="store-finder-box-3" class="store-finder-box">
            <div class="row">
              <div class="col-sm-6">
                <div class="store-finder-store-info">
                  <div class="store-finder-store-info-title">{{ 'storeFinder.address'|trans([], 'main') }}</div><br>
                  <div>{{ 'storeFinder.addressLineOne'|trans([], 'main') }}</div>
                  <div>{{ 'storeFinder.addressLineTwo'|trans([], 'main') }}</div>
                  <div>{{ 'storeFinder.addressLineThree'|trans([], 'main') }}</div>
                  <div>{{ 'storeFinder.addressLineFour'|trans([], 'main') }}</div>
                </div><br>
              </div>
              <div class="col-sm-6">
                <div class="store-finder-store-info">
                  <div class="store-finder-store-info-title">{{ 'storeFinder.workingHours'|trans([], 'main') }}</div><br>
                  <div><b>{{ 'storeFinder.standartHours.title'|trans([], 'main') }}</b></div>
                  <div>{{ 'storeFinder.standartHours.monFri'|trans([], 'main') }}</div>
                  <div>{{ 'storeFinder.standartHours.weekend'|trans([], 'main') }}</div><br>
                  <div><b>{{ 'storeFinder.holidayHours.title'|trans([], 'main') }}</b></div>
                  <div>{{ 'storeFinder.holidayHours.monFri'|trans([], 'main') }}</div>
                  <div>{{ 'storeFinder.holidayHours.weekend'|trans([], 'main') }}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% include '@Example/partials/common/footer.html.twig' %}
  {% include '@Example/partials/common/htmlscripts.html.twig' %}
</body>

</html>
