<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="commercetools.cache.setup" type="string">false</parameter>
    </parameters>
    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />
        <prototype namespace="Commercetools\Symfony\SetupBundle\Command\" resource="../../Command/*" />

        <service id="Commercetools\Symfony\SetupBundle\Model\Repository\SetupRepository">
            <argument>%commercetools.cache.setup%</argument>
            <argument type="service" id="commercetools.cache" />
            <argument type="service" id="commercetools.client"/>
            <argument type="service" id="commmercetools.mapper.factory" />
            <argument type="service" id="commercetools.logger" />
        </service>
        
    </services>
</container>
